<h1>New Library</h1>

<div class='row'>
  <div >
    <%= form_for(@library, :html => {class: "form-horizontal", role: "form"}) do |f| %>

    <div class="form-group">
      <div >
        <%= f.label :name %>
      </div>
      <div >
        <%= f.text_field :name, class: "form-control", autofocus: true %>
      </div>
    </div>

    <div >
      <div >
        <%= f.label :category %>
      </div>
      <div>
        <%= f.text_field :category, class: "form-control", autofocus: true %>
      </div>
    </div>

    <div >
      <div>
        <%= f.submit 'Create Library' %>

      </div>
    </div>

    <% end %>